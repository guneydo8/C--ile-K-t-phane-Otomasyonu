
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>


    <h2>Kütüphanemizden Kareler</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:1000px;height:500px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
            <li data-target="#myCarousel" data-slide-to="7"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">

                <img src="~/Vitrin/Resimler/1.jpg" style="width:1000px;height:500px" />
            </div>

            <div class="item">
                <img src="~/Vitrin/Resimler/2.jpg" style="width:1000px;height:500px" />
            </div>

            <div class="item">
                <img src="~/Vitrin/Resimler/3.jpg" style="width:1000px;height:500px" />
            </div>
            <div class="item">
                <img src="~/Vitrin/Resimler/4.jpg" style="width:1000px;height:500px" />
            </div>
            <div class="item">
                <img src="~/Vitrin/Resimler/5.jpg" style="width:1000px;height:500px" />
            </div>
            <div class="item">
                <img src="~/Vitrin/Resimler/6.png" style="width:1000px;height:500px" />
            </div>
            <div class="item">
                <img src="~/Vitrin/Resimler/7.jpg" style="width:1000px;height:500px" />
            </div>
            <div class="item">
                <img src="~/Vitrin/Resimler/8.jpg" style="width:1000px;height:500px" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <br />

    <form action="/İstatistikler/ResimYükle/" method="post" enctype="multipart/form-data">
        <input type="file" id="dosya" name="dosya" class="btn btn-danger" style="background-color:#000000" />
        <br />
        <input type="submit" value="Kaydet" class="btn btn-primary" style="background-color:#291f1f" />
    </form>



</body>
</html>


