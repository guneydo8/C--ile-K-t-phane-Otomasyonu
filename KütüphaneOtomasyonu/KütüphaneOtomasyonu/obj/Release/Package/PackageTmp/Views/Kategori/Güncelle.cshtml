@model KütüphaneOtomasyonu.Models.Entity.TblKategoriler
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<br />

@using (Html.BeginForm("Güncelle2", "Kategori", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
