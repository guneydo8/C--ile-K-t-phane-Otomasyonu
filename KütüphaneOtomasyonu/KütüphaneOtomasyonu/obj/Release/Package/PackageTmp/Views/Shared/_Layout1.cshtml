
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<title>Online Kütüphane Otomasyonu</title>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 260px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #000000;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 10px 16px;
                text-decoration: none;
                font-size: 23px;
                color: #ffffff;
                display: block;
            }

                .sidebar a:hover {
                    color: #8f16c2;
                }

        .main {
            margin-left: 260px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/İstatistikler/Index/"><i class="glyphicon glyphicon-home"></i> &nbsp;Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-th-large"></i> &nbsp;Kategoriler</a>
        <a href="/Kitaplar/Index/"><i class="glyphicon glyphicon-book"></i> &nbsp;Kitaplar</a>
        <a href="/Yazarlar/Index/"><i class="glyphicon glyphicon-comment"></i> &nbsp;Yazarlar</a>
        <a href="/Üyeler/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp;Üyeler</a>
        <a href="/Personeller/Index/"><i class="glyphicon glyphicon-pushpin"></i> &nbsp;Personeller</a>
        <a href="/ÖdünçKitap/Index/"><i class="glyphicon glyphicon-triangle-right"></i> &nbsp;Aktif İşlemler</a>
        <a href="/İşlemler/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp;Geçmiş İşlemler</a>

        <a href="/İstatistikler/LinqKartlar/"><i class="glyphicon glyphicon-flash"></i> &nbsp;İstatistikler</a>
        <a href="/İstatistikler/Galeri/"><i class="glyphicon glyphicon-picture"></i> &nbsp;Galeri</a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-link"></i> &nbsp;Vitrin</a>
        <a href="/İstatistikler/Hava/"><i class="glyphicon glyphicon-cloud"></i> &nbsp;Hava Durumu</a>
        <a href="/Duyurular/Index/"><i class="glyphicon glyphicon-bell"></i> &nbsp;Duyurular</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Ayarlar/Index2/"><i class="glyphicon glyphicon-wrench"></i> &nbsp;Ayarlar</a>
        }
        <a href="/Grafikler/Index/"><i class="glyphicon glyphicon-resize-horizontal"></i> &nbsp;Grafikler</a>
        <a href="/AdminLogin/AdminGiriş/"><i class="glyphicon glyphicon-remove-sign"></i> &nbsp;Çıkış</a>

    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
