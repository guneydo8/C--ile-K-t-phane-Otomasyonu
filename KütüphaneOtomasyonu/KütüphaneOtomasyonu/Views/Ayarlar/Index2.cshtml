@using KütüphaneOtomasyonu.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<br />
<table class="table table-bordered">
    <tr style="background-color:black;color:white">
        <th>ID</th>
        <th>KULLANICI</th>
        <th>YETKİ</th>
        <th>İŞLEMLER</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Mail</td>
            <td>@x.Yetki</td>


            <td>
                <a href="/Ayarlar/Sil/@x.Id" class="btn btn-danger" style="background-color:indigo">Sil</a>
                <a href="/Ayarlar/Güncelle/@x.Id" class="btn btn-success" style="background-color:black">Güncelle</a>
              

                

            </td>

        </tr>
    }
</table>

<button class="btn btn-primary" style="background-color:indigo" data-toggle="modal" data-target="#Modal1">Yeni Admin Girişi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Admin Girişi</h2>
            </div>

            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <label>Kullanıcı Mail</label>
                    <input type="email" required="" class="form-control" name="Mail" />
                    <br />


                    <label>Kullanıcı Şifre</label>
                    <input type="password" required="" class="form-control" name="Şifre" />
                    <br />

                    <label>Kullanıcı Yetki</label>
                    <input type="text" required="" class="form-control" name="Yetki" />
                    <br />

                    <button class="btn btn-danger" style="background-color:black">Kaydet</button>

                </div>
            </form>
        </div>

    </div>
</div>