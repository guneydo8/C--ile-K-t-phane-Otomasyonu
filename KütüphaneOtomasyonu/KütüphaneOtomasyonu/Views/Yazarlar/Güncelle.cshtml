@model KütüphaneOtomasyonu.Models.Entity.TblYazar
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<br />

@using (Html.BeginForm("Güncelle2", "Yazarlar", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <label style="color:red">Yazar Adı</label>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <label style="color:red">Yazar Soyadı</label>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    <label style="color:red">Açıklama</label>
    @Html.TextAreaFor(x => x.Açıklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
}


